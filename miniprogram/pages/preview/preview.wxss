/* preview.wxss */
page {
  background-color: #000;
}

.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.preview-area {
  flex: 1;
  overflow: hidden;
}

.scroll-view {
  height: 100%;
  width: 100%;
}

.result-image {
  width: 100%;
  display: block;
  background-color: #000;
}

.bottom-bar {
  display: flex;
  padding: 20rpx;
  background-color: #fff;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.action-btn {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  border: none;
  margin: 0 10rpx;
}

.action-btn.primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
}

.action-btn.secondary {
  background-color: #f5f5f5;
  color: #333;
}

.action-btn::after {
  border: none;
}
