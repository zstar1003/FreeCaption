/* preview.wxss */
page {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: transparent;
}

.preview-area {
  flex: 1;
  overflow: hidden;
  padding: 20rpx;
}

.scroll-view {
  height: 100%;
  width: 100%;
}

.result-image {
  width: 100%;
  display: block;
  border-radius: 20rpx;
  box-shadow: 0 12rpx 48rpx rgba(0, 0, 0, 0.3);
}

.bottom-bar {
  display: flex;
  padding: 16rpx 24rpx;
  padding-bottom: calc(16rpx + env(safe-area-inset-bottom));
  background: #fff;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.1);
  gap: 16rpx;
}

.action-btn {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  font-size: 30rpx;
  font-weight: bold;
  border: none;
  transition: all 0.3s;
}

.action-btn.primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.4);
}

.action-btn.secondary {
  background: linear-gradient(135deg, #f5f5f5, #e8e8e8);
  color: #666;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.action-btn::after {
  border: none;
}

