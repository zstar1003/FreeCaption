/* preview.wxss - 简洁清爽风格 */
page {
  background: #f5f7fa;
}

.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: transparent;
}

.preview-area {
  flex: 1;
  overflow: hidden;
  padding: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.scroll-view {
  height: 100%;
  width: 100%;
}

.result-image {
  width: 100%;
  display: block;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.bottom-bar {
  display: flex;
  padding: 16rpx 24rpx;
  padding-bottom: calc(32rpx + env(safe-area-inset-bottom));
  background: #fff;
  box-shadow: 0 -2rpx 12rpx rgba(0, 0, 0, 0.04);
  gap: 12rpx;
}

.action-btn {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 12rpx;
  font-size: 30rpx;
  font-weight: 500;
  border: none;
  transition: opacity 0.2s;
}

.action-btn:active {
  opacity: 0.8;
}

.action-btn.primary {
  background: #3498db;
  color: #fff;
}

.action-btn.secondary {
  background: #ecf0f1;
  color: #7f8c8d;
}

.action-btn::after {
  border: none;
}
