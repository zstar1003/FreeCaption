/* index.wxss */
page {
  height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.main-content {
  flex: 1;
  overflow-y: auto;
}

/* 头部区域 - 更紧凑 */
.header {
  padding: 40rpx 30rpx 30rpx;
  background: transparent;
  color: #fff;
  text-align: center;
}

.title {
  display: block;
  font-size: 44rpx;
  font-weight: bold;
  margin-bottom: 12rpx;
  letter-spacing: 2rpx;
}

.subtitle {
  display: block;
  font-size: 26rpx;
  opacity: 0.9;
}

/* 通用区块 - 减少间距 */
.image-section,
.settings-section,
.tips-section {
  margin: 20rpx 24rpx;
  background-color: #fff;
  border-radius: 24rpx;
  padding: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.15);
}

.section-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 24rpx;
}

.section-title .tip {
  font-size: 22rpx;
  color: #999;
  font-weight: normal;
}

/* 图片列表 */
.image-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.image-item {
  position: relative;
  width: 210rpx;
  height: 210rpx;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.preview-img {
  width: 100%;
  height: 100%;
}

.image-badge {
  position: absolute;
  top: 8rpx;
  left: 8rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  padding: 6rpx 16rpx;
  border-radius: 24rpx;
  font-size: 22rpx;
  font-weight: bold;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
}

.delete-btn {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  width: 48rpx;
  height: 48rpx;
  background: linear-gradient(135deg, #ff6b6b, #ee5a6f);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 28rpx;
  font-weight: bold;
  box-shadow: 0 4rpx 12rpx rgba(255, 107, 107, 0.4);
}

.add-image-btn {
  width: 210rpx;
  height: 210rpx;
  border: 3rpx dashed rgba(102, 126, 234, 0.4);
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #667eea;
  background: rgba(102, 126, 234, 0.05);
  transition: all 0.3s;
}

.add-icon {
  font-size: 56rpx;
  margin-bottom: 8rpx;
  font-weight: 300;
}

.add-text {
  font-size: 24rpx;
}

/* 设置区域 */
.setting-item {
  margin-bottom: 32rpx;
}

.setting-item:last-child {
  margin-bottom: 0;
}

.setting-label {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
  font-size: 28rpx;
  color: #666;
}

.setting-value {
  color: #667eea;
  font-weight: bold;
  font-size: 32rpx;
}

.radio-group {
  display: flex;
  flex-wrap: wrap;
  gap: 24rpx;
}

.radio-item {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #666;
  padding: 12rpx 24rpx;
  border-radius: 32rpx;
  background: #f5f5f5;
  transition: all 0.3s;
}

.radio-item radio {
  margin-right: 8rpx;
}

/* 提示区域 - 更紧凑 */
.tips-content {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.tip-item {
  font-size: 24rpx;
  color: #666;
  line-height: 36rpx;
  padding-left: 20rpx;
  position: relative;
}

.tip-item::before {
  content: '•';
  position: absolute;
  left: 0;
  color: #667eea;
  font-weight: bold;
}

/* 底部操作栏 - 更美观 */
.bottom-bar {
  display: flex;
  padding: 16rpx 24rpx;
  padding-bottom: calc(16rpx + env(safe-area-inset-bottom));
  background: #fff;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.1);
  gap: 16rpx;
}

.action-btn {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  font-size: 30rpx;
  font-weight: bold;
  border: none;
  position: relative;
  overflow: hidden;
  transition: all 0.3s;
}

.action-btn.primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.4);
}

.action-btn.primary.disabled {
  background: #e0e0e0;
  color: #999;
  box-shadow: none;
}

.action-btn.secondary {
  background: linear-gradient(135deg, #f5f5f5, #e8e8e8);
  color: #666;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.action-btn::after {
  border: none;
}


