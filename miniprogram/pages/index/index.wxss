/* index.wxss - 简洁清爽风格 */
page {
  height: 100vh;
  background: #f5f7fa;
}

.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.main-content {
  flex: 1;
  overflow-y: auto;
  padding-bottom: 24rpx;
}

/* 头部区域 */
.header {
  padding: 48rpx 30rpx 32rpx;
  background: #fff;
  text-align: center;
  margin-bottom: 16rpx;
}

.title {
  display: block;
  font-size: 48rpx;
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 12rpx;
}

.subtitle {
  display: block;
  font-size: 26rpx;
  color: #7f8c8d;
}

/* 通用卡片样式 */
.image-section,
.settings-section,
.preview-section {
  margin: 0 24rpx 16rpx;
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

.section-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 30rpx;
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 24rpx;
}

.section-title .tip {
  font-size: 24rpx;
  color: #95a5a6;
  font-weight: 400;
}

/* 图片列表 - 3x3 网格布局 */
.image-list {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 12rpx;
}

.image-item {
  position: relative;
  width: 100%;
  padding-bottom: 100%;
  border-radius: 12rpx;
  overflow: hidden;
  background: #f8f9fa;
}

.preview-img {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.image-badge {
  position: absolute;
  top: 6rpx;
  left: 6rpx;
  background: rgba(52, 152, 219, 0.9);
  color: #fff;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  font-size: 20rpx;
  font-weight: 500;
}

.delete-btn {
  position: absolute;
  top: 6rpx;
  right: 6rpx;
  width: 48rpx;
  height: 48rpx;
  background: rgba(231, 76, 60, 0.9);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 24rpx;
  font-weight: 600;
}

.add-image-btn {
  position: relative;
  width: 100%;
  padding-bottom: 100%;
  border: 2rpx dashed #bdc3c7;
  border-radius: 12rpx;
  background: #f8f9fa;
}

.add-icon {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -70%);
  font-size: 48rpx;
  font-weight: 300;
  color: #95a5a6;
}

.add-text {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, 50%);
  font-size: 22rpx;
  color: #95a5a6;
}

/* 设置区域 */
.setting-item {
  margin-bottom: 28rpx;
}

.setting-item:last-child {
  margin-bottom: 0;
}

.setting-label {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
  font-size: 28rpx;
  color: #2c3e50;
}

.setting-value {
  color: #3498db;
  font-weight: 600;
  font-size: 30rpx;
}

/* 字幕高度信息 */
.subtitle-height-info {
  margin-top: 16rpx;
  text-align: center;
  font-size: 24rpx;
  color: #7f8c8d;
  background: #f8f9fa;
  padding: 12rpx 20rpx;
  border-radius: 12rpx;
}

/* 预览参考图区域 */
.preview-container {
  position: relative;
  width: 100%;
  margin-top: 12rpx;
  border-radius: 12rpx;
  overflow: hidden;
  background: #f8f9fa;
}

.preview-ref-img {
  width: 100%;
  display: block;
}

.preview-line {
  position: absolute;
  left: 0;
  right: 0;
  height: 3rpx;
  background: #3498db;
  z-index: 2;
}

.preview-line-top::after {
  content: '上边界';
  position: absolute;
  left: 12rpx;
  top: -38rpx;
  background: #3498db;
  color: #fff;
  padding: 6rpx 14rpx;
  border-radius: 12rpx;
  font-size: 20rpx;
  font-weight: 500;
  white-space: nowrap;
}

.preview-line-bottom::after {
  content: '下边界';
  position: absolute;
  left: 12rpx;
  bottom: -38rpx;
  background: #3498db;
  color: #fff;
  padding: 6rpx 14rpx;
  border-radius: 12rpx;
  font-size: 20rpx;
  font-weight: 500;
  white-space: nowrap;
}

.preview-mask {
  position: absolute;
  left: 0;
  right: 0;
  background: rgba(0, 0, 0, 0.4);
  z-index: 1;
}

.preview-mask-top {
  top: 0;
}

.preview-mask-bottom {
  bottom: 0;
}

/* 底部操作栏 */
.bottom-bar {
  display: flex;
  padding: 16rpx 24rpx;
  padding-bottom: calc(32rpx + env(safe-area-inset-bottom));
  background: #fff;
  box-shadow: 0 -2rpx 12rpx rgba(0, 0, 0, 0.04);
  gap: 12rpx;
}

.action-btn {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 12rpx;
  font-size: 30rpx;
  font-weight: 500;
  border: none;
  transition: opacity 0.2s;
}

.action-btn:active {
  opacity: 0.8;
}

.action-btn.primary {
  background: #3498db;
  color: #fff;
}

.action-btn.primary.disabled {
  background: #bdc3c7;
  color: #ecf0f1;
}

.action-btn.secondary {
  background: #ecf0f1;
  color: #7f8c8d;
}

.action-btn::after {
  border: none;
}
