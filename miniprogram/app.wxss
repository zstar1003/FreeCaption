/* app.wxss - 全局样式 */
page {
  --primary-color: #667eea;
  --secondary-color: #764ba2;
  --text-color: #333;
  --text-secondary: #666;
  --text-light: #999;
  --border-radius: 24rpx;
  --shadow-sm: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  --shadow-md: 0 8rpx 24rpx rgba(102, 126, 234, 0.15);
  --shadow-lg: 0 12rpx 48rpx rgba(0, 0, 0, 0.3);
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
}

/* 通用滚动条样式 */
::-webkit-scrollbar {
  width: 0;
  height: 0;
  background: transparent;
}

/* 通用按钮重置 */
button {
  padding: 0;
  margin: 0;
  background: none;
  border: none;
  outline: none;
}

button::after {
  border: none;
}

/* 通用输入框样式 */
input, textarea {
  font-family: inherit;
}

/* 通用文字样式 */
text {
  font-family: inherit;
}

/* 通用动画 */
@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.fade-in {
  animation: fadeIn 0.3s ease-out;
}
 
