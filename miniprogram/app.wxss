/* app.wxss - 全局样式 - 简洁风格 */
page {
  --primary-color: #3498db;
  --text-color: #2c3e50;
  --text-secondary: #7f8c8d;
  --text-light: #95a5a6;
  --bg-color: #f5f7fa;
  --card-bg: #fff;
  --border-color: #ecf0f1;
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
}

/* 通用滚动条样式 */
::-webkit-scrollbar {
  width: 0;
  height: 0;
  background: transparent;
}

/* 通用按钮重置 */
button {
  padding: 0;
  margin: 0;
  background: none;
  border: none;
  outline: none;
  font-family: inherit;
}

button::after {
  border: none;
}

/* 通用输入框样式 */
input, textarea {
  font-family: inherit;
}

/* 通用文字样式 */
text {
  font-family: inherit;
}
